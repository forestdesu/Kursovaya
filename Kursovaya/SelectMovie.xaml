<Page x:Class="Kursovaya.SelectMovie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursovaya"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="SelectMovie">

    <Page.Resources>
        
    </Page.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" HorizontalAlignment="Left" Margin="25,25,0,0" TextWrapping="Wrap" Text="Выбор фильма" VerticalAlignment="Top" FontSize="24"/>
        <WrapPanel Grid.Column="0" Margin="25, 75, 25, 0" x:Name="Movies">

        </WrapPanel>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="25,30,0,0" TextWrapping="Wrap" Text="Фильтры" VerticalAlignment="Top" FontSize="20"/>
        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="25,75,25,0">
            <ComboBox Name="comboBox" Width="200">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="asd" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>